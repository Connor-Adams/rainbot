# ============================================================================
# Multi-Bot Architecture Configuration
# ============================================================================

# Raincloud - Orchestrator Bot
RAINCLOUD_TOKEN=your_raincloud_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here

# Rainbot - Music Worker Bot
RAINBOT_TOKEN=your_rainbot_worker_token_here

# Pranjeet - TTS Worker Bot
PRANJEET_TOKEN=your_pranjeet_tts_token_here

# HungerBot - Soundboard Worker Bot
HUNGERBOT_TOKEN=your_hungerbot_soundboard_token_here

# Optional: Deploy commands to a specific guild for faster updates (recommended for development)
# If not set, commands will be deployed globally (takes up to 1 hour to propagate)
# DISCORD_GUILD_ID=your_guild_id_here

# Discord OAuth Configuration
DISCORD_CLIENT_SECRET=your_oauth_client_secret_here

# Optional: Restrict dashboard access to users with a specific role
# If not set, all authenticated Discord users can access the dashboard
# REQUIRED_ROLE_ID=your_required_role_id_here

# ============================================================================
# Worker URLs (for orchestrator to communicate with workers)
# ============================================================================
RAINBOT_URL=http://localhost:3001
PRANJEET_URL=http://localhost:3002
HUNGERBOT_URL=http://localhost:3003

# ============================================================================
# Infrastructure
# ============================================================================

# Redis Configuration (required for multi-bot state management)
REDIS_URL=redis://localhost:6379

# PostgreSQL Configuration
POSTGRES_USER=rainbot
POSTGRES_PASSWORD=rainbot
POSTGRES_DB=rainbot
DATABASE_URL=postgresql://rainbot:rainbot@localhost:5432/rainbot

# Server Configuration
PORT=3000
SESSION_SECRET=generate_a_random_secret_string_here
SESSION_STORE_PATH=./sessions

# OAuth Callback URL (optional - auto-detected on Railway)
CALLBACK_URL=http://localhost:3000/auth/discord/callback

# Feature Flags
DISABLE_AUTO_DEPLOY=false

# Voice Interaction Configuration (optional)
# Enable voice commands for music control
VOICE_INTERACTION_ENABLED=false

# Speech-to-Text Provider: google, openai, azure, aws, whisper
# OpenAI uses Whisper model and is much easier to set up (just API key)
STT_PROVIDER=openai
STT_API_KEY=your_openai_api_key_here

# Text-to-Speech Provider: google, openai, azure, aws, polly
# OpenAI TTS is simpler to configure (just API key)
TTS_PROVIDER=openai
TTS_API_KEY=your_openai_api_key_here

# Voice Settings
VOICE_LANGUAGE=en-US
# OpenAI voices: alloy, echo, fable, onyx, nova, shimmer
# Google voices: en-US-Neural2-J, en-US-Neural2-C, etc.
TTS_VOICE_NAME=alloy

# Logging (optional)
LOG_LEVEL=debug

# YouTube Authentication (optional - fixes 403 errors)
# Path to Netscape cookies file for yt-dlp authentication
# Export cookies from your browser using a browser extension
# YTDLP_COOKIES=/path/to/cookies.txt
# YTDLP_PATH=yt-dlp
