{
  "name": "rainbot-monorepo",
  "version": "1.0.0",
  "description": "Rainbot multi-bot voice architecture monorepo",
  "license": "ISC",
  "author": "",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:ts": "turbo run build:ts",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\"",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "[ -d .git ] && husky || true",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run test"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.14",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.3",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.4.17",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "@google-cloud/speech": "^6.8.0",
    "@google-cloud/text-to-speech": "^5.8.0",
    "openai": "^4.104.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
