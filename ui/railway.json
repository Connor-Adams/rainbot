{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "yarn install --immutable && yarn workspace @rainbot/ui build",
    "watchPatterns": ["ui/**", "package.json", "yarn.lock"]
  },
  "deploy": {
    "startCommand": "node ui/server.js",
    "healthcheckPath": "/",
    "healthcheckTimeout": 10,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
