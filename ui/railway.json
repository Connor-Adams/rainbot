{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "installCommand": "corepack enable && corepack prepare yarn@4.6.0 --activate && sh -lc \"cd ui && yarn install --immutable\"",
    "buildCommand": "sh -lc \"cd ui && yarn build\""
  },
  "deploy": {
    "startCommand": "sh -lc \"cd ui && yarn start:prod\"",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "VITE_API_BASE_URL": "https://raincloud-production.up.railway.app/api",
    "VITE_AUTH_BASE_URL": "https://raincloud-production.up.railway.app"
  }
}
