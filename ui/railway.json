{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "installCommand": "corepack enable && corepack prepare yarn@4.6.0 --activate && yarn install --immutable",
    "buildCommand": "yarn -C ui build"
  },
  "deploy": {
    "startCommand": "yarn -C ui preview --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
