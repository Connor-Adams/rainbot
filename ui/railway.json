{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "installCommand": "corepack enable && corepack prepare yarn@4.6.0 --activate && sh -lc \"cd ui && yarn install --immutable\"",
    "buildCommand": "sh -lc \"cd ui && yarn build\""
  },
  "deploy": {
    "startCommand": "sh -lc \"cd ui && yarn start:prod\"",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
