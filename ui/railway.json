{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "cd ui && deno run --allow-read --allow-run --allow-net npm:vite build"
  },
  "deploy": {
    "startCommand": "deno run --node-modules-dir=auto --allow-all --env ./ui/server.ts",
    "healthcheckPath": "/",
    "healthcheckTimeout": 10,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
