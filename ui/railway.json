{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "installCommand": "corepack enable && cd .. && yarn install --immutable",
    "buildCommand": "cd .. && yarn workspace @rainbot/ui build"
  },
  "deploy": {
    "startCommand": "sh -lc \"cd .. && yarn workspace @rainbot/ui preview --host 0.0.0.0 --port $PORT\"",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
