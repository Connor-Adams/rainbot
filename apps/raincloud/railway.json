{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "deno install --allow-all && deno check apps/raincloud/index.ts",
    "watchPatterns": ["apps/raincloud/**", "packages/**", "deno.json", "deno.lock"]
  },
  "deploy": {
    "startCommand": "deno run --node-modules-dir=auto --allow-all --env apps/raincloud/index.ts",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
