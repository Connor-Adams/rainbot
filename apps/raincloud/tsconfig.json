{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "noImplicitReturns": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "paths": {
      "@commands/*": ["commands/*"],
      "@types/*": ["types/*"],
      "@server/*": ["server/*"],
      "@handlers/*": ["handlers/*"],
      "@events/*": ["src/events/*"],
      "@components/*": ["components/*"],
      "@lib/*": ["lib/*"]
    }
  },
  "include": [
    "commands/**/*.ts",
    "types/**/*.ts",
    "types/**/*.d.ts",
    "server/**/*.ts",
    "handlers/**/*.ts",
    "src/events/**/*.ts",
    "src/rpc/**/*.ts",
    "components/**/*.ts",
    "lib/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
