{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "installCommand": "corepack enable && yarn install --immutable",
    "buildCommand": "yarn workspace @rainbot/rainbot-worker build"
  },
  "deploy": {
    "startCommand": "node apps/rainbot/dist/apps/rainbot/src/index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "RAINBOT_TOKEN": "",
    "RAINBOT_PORT": "3001",
    "ORCHESTRATOR_BOT_ID": "",
    "RAINCLOUD_URL": "http://raincloud.railway.internal:3000",
    "WORKER_SECRET": "${{shared.WORKER_SECRET}}"
  }
}
