{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "installCommand": "corepack enable && yarn install --immutable",
    "buildCommand": "yarn workspace @rainbot/hungerbot-worker build"
  },
  "deploy": {
    "startCommand": "node apps/hungerbot/dist/index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "HUNGERBOT_TOKEN": "",
    "HUNGERBOT_PORT": "3003",
    "ORCHESTRATOR_BOT_ID": "",
    "RAINCLOUD_URL": "http://raincloud.railway.internal:3000",
    "WORKER_SECRET": "${{shared.WORKER_SECRET}}"
  }
}
